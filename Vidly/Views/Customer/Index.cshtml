
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Customers</h2>

@if (Model.Count == 0)
{
    <text>We dont have any customers</text>
}
else
{
    <ul>
        @foreach(var customer in Model)
        {
            <li>@customer.Name <i>(@customer.Id)</i></li>
        }
    </ul>  
}


